<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScreenText">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
    </style>

    <style name="Label" parent="ScreenText">
        <item name="android:textColor">@color/green_darken_2</item>
    </style>

    <style name="OutputText" parent="ScreenText">
        <item name="android:textColor">@color/pink_darken_2</item>
    </style>
</resources>
